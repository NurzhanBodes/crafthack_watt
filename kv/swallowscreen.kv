#:import utils kivy.utils

<SwallowScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb:utils.get_color_from_hex("#F9F9F9")
            Rectangle:
                size:self.size
                pos:self.pos

        Label:
            pos_hint: {"top":.97, "left":.5}
            size_hint: 1,.03
            text:"Do you have a swallowing\ndifficulty?"
            id:first_label
            font_size:25
            color: (0,0,0,1)
        GridLayout:
            rows:1
            pos_hint:{"top":.90,"left":1.5}
            size_hint:1,.3
            ImageButton:
                source: "icons/swallow.png"
                on_press:
                    app.input("swallowing",2)
            ImageButton:
                source: "icons/no.png"
                on_press:
                    print("NO")
        Label:
            pos_hint: {"top":.57, "left":.5}
            size_hint: 1,.06
            text:"Do you often feel a chest\npain?"
            id:first_label
            font_size:25
            color: (0,0,0,1)
        GridLayout:
            rows:1
            pos_hint:{"top":.5,"left":1.5}
            size_hint:1,.3
            ImageButton:
                source: "icons/chest_pain.png"
                on_press:
                    app.input("pain",2)
            ImageButton:
                source: "icons/no.png"
                on_press:
                    print("NO")

        GridLayout:
            rows:1
            pos_hint:{"top":.20,"left":1}
            size_hint:1,.12
            ImageButton:
                source: "icons/continue.png"
                on_press:
                    app.change_screen("ancestor_screen")



