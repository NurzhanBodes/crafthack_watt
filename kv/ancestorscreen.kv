#:import utils kivy.utils

<AncestorScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb:utils.get_color_from_hex("#F9F9F9")
            Rectangle:
                size:self.size
                pos:self.pos

        Label:
            pos_hint: {"top":.7, "left":.5}
            size_hint: 1,.06
            text:"Have any member of your\nfamily been diagnosed\nwith cancer?"
            id:first_label
            font_size:25
            color: (0,0,0,1)
        GridLayout:
            rows:1
            pos_hint:{"top":.57,"left":1.5}
            size_hint:1,.3
            ImageButton:
                source: "icons/family.png"
                on_press:
                    app.input("family",2)
            ImageButton:
                source: "icons/no.png"
                on_press:
                    print("NO")

        GridLayout:
            rows:1
            pos_hint:{"top":.20,"left":1}
            size_hint:1,.12
            ImageButton:
                source: "icons/continue.png"
                on_press:
                    app.machine()


